<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Version>2.0.5.1</Version>
    <AssemblyVersion>2.0.5.1</AssemblyVersion>
    <FileVersion>2.0.5.1</FileVersion>
    <Authors>Eric Kauffman</Authors>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>aspnet, efcore, cosmos, cosmosdb, identity, provider, identity provider</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>AspNetCore.Identity.CosmosDb</PackageId>
    <RepositoryUrl>https://github.com/CosmosSoftware/AspNetCore.Identity.CosmosDb</RepositoryUrl>
    <PackageProjectUrl>https://github.com/CosmosSoftware/AspNetCore.Identity.CosmosDb</PackageProjectUrl>
    <PackageIcon>nuget-icon.png</PackageIcon>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <RepositoryType>git</RepositoryType>
    <Description>A Cosmos DB implementation of ASP.NET Core Identity for .NET 6.</Description>
    <ApplicationIcon>_res\icons\nuget-icon.ico</ApplicationIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <Company>Cosmos Software LLC</Company>
    <Copyright>Moonrise Software LLC</Copyright>
    <PackageReleaseNotes>IQueryableUserStor and IQueryableRoleStore implemented</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Duende.IdentityServer.EntityFramework.Storage" Version="6.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="6.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.UI" Version="6.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Cosmos" Version="6.0.6" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="_res\icons\nuget-icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="_res\icons\nuget-icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
